<h1><%=h @origin.name %></h1>

<%= @origin.hidden? ? "<i>Hidden</i>" : "" %>

<p>
  <b>Type:</b> <%=h @origin.type %>
</p>

<p>
  <b>Description:</b> <%=h @origin.description %>
</p>

<p><b>Granted Skills</b>:

<ul>
<% for os in @origin.origin_skills %>
<li><%= os.skill.flag? ? "" : os.count %> <%= link_to os.skill.name, :controller => 'skills', :action => 'show', :id => os.skill_id %>
<% if session[:admin] %>
<i>(<%= link_to 'Delete', :action => 'deleteskill', :id => @origin, :skill_id => os.skill_id %>)</i>
<% end %>
</li>
<% end %>
</ul>

<% if session[:admin] %>
<%= link_to 'Edit', :action => 'edit', :id => @origin %> |
<%= link_to 'Add Skills', :action => 'pick', :id => @origin %> |
<% end %>
<%= link_to 'Back', :action => 'list' %>
